@model Category
<form method="post">
    <div class="form-group">
        <label asp-for="Name">New Category Name</label>
        <input class="form-control" asp-for="Name" placeholder="Enter New Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    @{
        
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Category</label>
                <select asp-for="ParentId" asp-items="@(new SelectList(ViewBag.Categories,nameof(Category.Id),nameof(Category.Name)))" class="form-control">
                    <option value="@null" selected>Select Category</option>
                </select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>

    }
    <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
