        <label asp-for="Description">Files</label>
        <input type="file" class="form-control" asp-for="File" placeholder="Choose File">
        <span asp-validation-for="File" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Main Files</label>
        <input type="file" class="form-control" asp-for="MainFile" placeholder="Choose File">
        <span asp-validation-for="MainFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Files</label>
        <input type="file" class="form-control" asp-for="HoverFile" placeholder="Choose File">
